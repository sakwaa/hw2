<!-- app/views/layouts/application.html.erb -->

<!DOCTYPE html>
<html>
  <head>
  		<title>Hw2</title>
    	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  	<%= csrf_meta_tags %>
  </head>
  <body>
  	
  	<%= render 'shared/navigation' %>

    <div id="main-container" class="container">
		<% flash.each do |name, msg| -%>
		  <%= content_tag :div, msg, class: "alert alert-#{name}" %>
		<% end -%>
      <div class="row">
        <div class="col-xs-3">
          <h3>HW#2 Software Engineering</h3>
          <p>This rails project demonstrates the usage of basic project initialization and integration with the Twitter Bootstrap v3.3.1 web framework.</p>
        </div>
        <div class="col-xs-9">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
